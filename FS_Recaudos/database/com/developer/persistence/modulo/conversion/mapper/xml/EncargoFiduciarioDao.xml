<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.developer.persistence.modulo.conversion.mapper.dao.EncargoFiduciarioDao">
	
	<select id="getAllEncargosSIFI" resultType="encargoFiduciarioSIFI">
		select * from co_tplts
		union
		select * from co_tplec
	</select>
	
	<select id="getAllEncargosNoSIFI" resultType="encargoFiduciarioNoSIFI">
		select * from co_tplns
	</select>
	
	
	<insert id="crearRegistroEncargoSIFI" parameterType="encargoFiduciarioSIFI">
		insert into co_tplts
		(
			plts_plan, 		
			plts_esta, 		
			plts_fdei, 		
			plts_fdei_tipo,
			plts_fcrea, 		
			plts_freca, 	
		)
		values
		(
			#{plts_plan}, 		
			#{plts_esta}, 		
			#{plts_fdei}, 		
			#{plts_fdei_tipo},
			#{plts_fcrea}, 		
			#{plts_freca} 			   
		)
	</insert>
	
	
	<delete id="eliminarAllEncargosSIFI">
		delete from co_tplts
	
	</delete>
	
	

	
</mapper>
